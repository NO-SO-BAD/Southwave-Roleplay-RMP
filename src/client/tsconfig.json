{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "../../client_packages/southwave-roleplay",
    "rootDir": "./src",
    "types": ["@ragempcommunity/types-client"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noEmitOnError": false,
    "removeComments": true,
    "noLib": false,

    "isolatedModules": false,
    "verbatimModuleSyntax": false  // ← FIX MÁS IMPORTANTE
  },
  "include": ["src/**/*"]
}
