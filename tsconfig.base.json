{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,          // ← Cambia a false
    "declarationMap": false,       // ← Puedes quitarlo o dejar false
    "ignoreDeprecations": "5.0"
  },
  "exclude": ["node_modules", "dist", "packages", "client_packages"]
}