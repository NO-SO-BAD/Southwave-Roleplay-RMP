{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",  // FIX: CommonJS (emite require/module.exports)
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", "packages", "client_packages"]
}